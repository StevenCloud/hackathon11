{
    "name" : "Page Preview alex3's",
    "version": "1.0",
    "manifest_version": 2,
    "background":{
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
        
    ],
    "browser_action": {
        "default_icon": {
            "16": "images/pen16.png",
            "48": "images/pen48.png",
            "128": "images/pen128.png"
        }
    },
    "permissions": ["storage"],
    "browser_action": {
        "default_popup": "popup.html"
    }

}